<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rojoluz"
    tools:context=".Alta">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALTA"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/rojopastel"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_alta1"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp">
            </ImageView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tyle="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_nombre"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="40dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nPaciente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tyle="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_ape"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="40dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apellido1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Primer Apellido"
                    android:inputType="textPersonName"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tyle="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_ape"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="40dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apellido2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Segundo Apellido"
                    android:inputType="textPersonName"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tyle="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_telefono"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="40dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telefonoAl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefono"
                    android:inputType="number"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tyle="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_correo"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="40dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/correoAl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo Electronico"
                    android:inputType="textPersonName"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/guardarAl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:drawableRight="@drawable/ic_guardar1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/rojoluz">
            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/nuevoAl"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:backgroundTint="@color/rojoluz"
                    android:drawableRight="@drawable/ic_nuevo1"
                    android:text="Nuevo"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp"></Button>

                <Button
                    android:id="@+id/cancelarAl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:drawableRight="@drawable/ic_cancelar1"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:backgroundTint="@color/rojoluz">
                </Button>

            </LinearLayout>

            <Button
                android:id="@+id/cerrarAl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:drawableRight="@drawable/ic_cerrar"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="110dp"
                android:backgroundTint="@color/rojoluz">
            </Button>
        </LinearLayout>

    </ScrollView>

  </LinearLayout>