<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ver"
    tools:context=".Registro">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTROS"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/vd"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                app:srcCompat="@drawable/img_arch"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp">
            </ImageView>

            <Button
                android:id="@+id/citasRegi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Citas Medicas"
                android:background="@color/ver"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">
            </Button>

            <Button
                android:id="@+id/actuaRegi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:background="@color/ver"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">
            </Button>

            <Button
                android:id="@+id/consuRegi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consultar"
                android:background="@color/ver"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">
            </Button>

            <Button
                android:id="@+id/cerrarR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginHorizontal="100dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/ver">
            </Button>

        </LinearLayout>
    </ScrollView>

</LinearLayout>