<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistroEnfer">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Enfermedad"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/azulito">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tyle="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:hintTextColor="@color/white"
        app:startIconDrawable="@drawable/ic_enfermedad"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nombreEnfe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Enfermedad"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tyle="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:hintTextColor="@color/white"
        app:startIconDrawable="@drawable/ic_descripcion"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripcion"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/guardarEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:drawableRight="@drawable/ic_guardar1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginHorizontal="95dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/azulito">
    </Button>

    <Button
        android:id="@+id/nuevoEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo"
        android:drawableRight="@drawable/ic_nuevo1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginHorizontal="95dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/azulito">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelarEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:drawableRight="@drawable/ic_cancelar1"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/azulito">
        </Button>

        <Button
            android:id="@+id/cerrarEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:drawableRight="@drawable/ic_cerrar"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/azulito">
        </Button>

    </LinearLayout>

</LinearLayout>